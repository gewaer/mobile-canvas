{
  "name": "Canvas",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "test:e2e": "detox test -c ios.sim.debug",
    "test:e2e:build": "detox build",
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "lint": "tslint --project tsconfig.json",
    "test": "jest",
    "android": "cd ./android && ./gradlew app:assembleDebug && ./gradlew installDebug",
    "android-apk": "react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res/",
    "generateApk": "cd ./android && ./gradlew clean && ./gradlew assembleRelease",
    "testFlight": "cd ios && fastlane beta && cd ../",
    "screenShoot-ios": "cd ios && fastlane screenshots && cd ../ ",
    "release-ios": "cd ios && fastlane release && cd ../",
    "test-ios": "cd ios && fastlane test && cd ../",
    "playstore-test": "cd android && fastlane beta && cd ../",
    "screenshoot-android": "cd android && fastlane screenshots && cd ../ ",
    "release-android": "cd android && fastlane playstore && cd ../",
    "test-android": "cd android && fastlane test && cd ../"
  },
  "dependencies": {
    "@types/lodash": "^4.14.123",
    "@types/react-native": "^0.57.51",
    "@types/react-redux": "^7.0.8",
    "axios": "^0.18.0",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "native-base": "^2.12.0",
    "react": "16.6.3",
    "react-native": "^0.58.5",
    "react-native-autogrow-textinput": "^5.2.0",
    "react-native-document-picker": "^2.3.0",
    "react-native-fbsdk": "^0.8.0",
    "react-native-fs": "^2.13.3",
    "react-native-google-signin": "^1.2.2",
    "react-native-image-crop-picker": "^0.23.1",
    "react-native-keyboard-aware-scroll-view": "^0.8.0",
    "react-native-mime-types": "^2.2.1",
    "react-native-navigation": "^2.18.1",
    "react-native-navigation-drawer-extension": "^1.0.3",
    "react-native-sentry": "^0.42.0",
    "react-native-snap-carousel": "^3.7.5",
    "react-native-sound": "^0.10.12",
    "react-native-swipe-list-view": "^1.5.3",
    "react-native-unimodules": "^0.2.0",
    "react-redux": "^6.0.1",
    "redux": "^4.0.1",
    "typescript": "^3.4.3"
  },
  "devDependencies": {
    "@types/enzyme": "^3.9.1",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.11",
    "@types/react-test-renderer": "^16.8.1",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "24.1.0",
    "detox": "^12.6.1",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "jest": "24.1.0",
    "metro-react-native-babel-preset": "0.52.0",
    "prettier": "^1.16.4",
    "react-dom": "^16.8.6",
    "react-native-dotenv": "^0.2.0",
    "react-native-typescript-transformer": "^1.2.12",
    "react-test-renderer": "^16.6.3",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^4.0.0"
  },
  "jest": {
    "preset": "react-native",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js",
      "\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.jest.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "setupFiles": [
      "./__tests__/setup.js"
    ]
  },
  "detox": {
    "test-runner": "jest",
    "runner-config": "e2e/config.json",
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/example.app",
        "build": "xcodebuild -project ios/example.xcodeproj -scheme example -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 7"
      },
      "android.emu.debug": {
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
        "build": "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd ..",
        "type": "android.emulator",
        "name": "Nexus_5X_API_24"
      },
      "android.emu.release": {
        "binaryPath": "android/app/build/outputs/apk/release/app-release.apk",
        "build": "cd android && ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release && cd ..",
        "type": "android.emulator",
        "name": "Nexus_5X_API_26"
      }
    }
  }
}
