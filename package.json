{
  "name": "Canvas",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest",
    "lint": "tslint --project tsconfig.json",
    "lint:css": "stylelint './'",
    "ios": "react-native run-ios --simulator \"iPhone 8\"",
    "android": "react-native run-android",
    "android:release": "react-native run-android --variant=release",
    "build:ios": "react-native bundle --entry-file index.js --platform ios --dev false --bundle-output ./ios/Canvas/main.jsbundle",
    "build:android": "react-native bundle --entry-file index.js --platform android --dev false --bundle-output ./android/app/src/main/assets/index.android.bundle --assets-dest ./android/app/src/main/res/"
  },
  "dependencies": {
    "@react-native-community/async-storage": "^1.6.1",
    "axios": "^0.18.1",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "native-base": "^2.13.5",
    "react": "16.8.6",
    "react-native": "0.60.5",
    "react-native-autogrow-textinput": "^5.2.0",
    "react-native-document-picker": "^3.2.4",
    "react-native-fbsdk": "^1.0.2",
    "react-native-fs": "^2.14.1",
    "react-native-google-signin": "^2.0.0",
    "react-native-image-crop-picker": "^0.25.0",
    "react-native-mime-types": "^2.2.1",
    "react-native-navigation": "^3.1.1",
    "react-native-sentry": "^0.42.0",
    "react-native-snap-carousel": "^3.8.0",
    "react-native-sound": "^0.11.0",
    "react-native-swipe-list-view": "^1.5.8",
    "react-native-vector-icons": "^6.6.0",
    "react-redux": "^6.0.1",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6",
    "redux-offline": "^2.0.0",
    "redux-persist": "^5.10.0",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "styled-components": "^4.4.0",
    "styled-is": "^1.3.0"
  },
  "devDependencies": {
    "@babel/core": "7.5.5",
    "@babel/runtime": "7.5.5",
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.132",
    "@types/react-native": "^0.57.60",
    "@types/react-native-dotenv": "^0.2.0",
    "@types/react-redux": "^7.1.4",
    "@types/react-test-renderer": "^16.8.1",
    "@types/redux-logger": "^3.0.7",
    "babel-jest": "24.9.0",
    "husky": "^3.0.8",
    "jest": "24.9.0",
    "lint-staged": "^9.4.1",
    "metro-react-native-babel-preset": "0.54.1",
    "prettier": "^1.18.2",
    "react-native-dotenv": "^0.2.0",
    "react-native-typescript-transformer": "^1.2.12",
    "react-test-renderer": "16.8.6",
    "stylelint": "^11.0.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.8.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^4.1.0",
    "tslint-react-hooks": "^2.2.1",
    "tslint-react-native": "0.0.7",
    "typescript": "^3.6.3"
  },
  "jest": {
    "preset": "react-native",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js",
      "\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.jest.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "setupFiles": [
      "./__tests__/setup.js"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "npm run --silent lint",
      "git add"
    ],
    "src/**/*.{ts, tsx}": [
      "npm run --silent lint:css",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  }
}
